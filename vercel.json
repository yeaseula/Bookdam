{
  "headers": [
    {
      "source": "/:path*\\.(js|css|woff2|png|jpg|svg|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/footer.html", "destination": "/pages/footer.html" },
    { "source": "/navigation.html", "destination": "/pages/navigation.html" }
  ]
}
